<!--AndroidManifest.xml-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/cliche_nerd_bot"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cliche_nerd_bot"
        android:supportsRtl="true"
        android:theme="@style/Theme.AIChatBot3"
        tools:targetApi="31">

        <!-- Home Activity -->
        <activity
            android:name=".HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Persona Selection Activity -->
        <activity
            android:name=".PersonaSelectionActivity"
            android:exported="true">
        </activity>

        <!-- NerdBotActivity -->
        <activity
            android:name=".NerdBotActivity"
            android:label="Nerd Bot"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- CleverBotActivity -->
        <activity
            android:name=".CleverBotActivity"
            android:label="Clever Bot"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- DumbBotActivity -->
        <activity
            android:name=".DumbBotActivity"
            android:label="Dumb Bot"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- ComedianBotActivity -->
        <activity
            android:name=".ComedianBotActivity"
            android:label="Comedian Bot"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
        </activity>
    </application>
</manifest>
